@model IEnumerable<BanVeMayBay.Models.city>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Đã Xóa</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Đã Xóa</li>
            </ol>
        </div>
    </div>
</div>



<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">

                    <a class="text-white btn-sm btn-danger " href="~/admin/Airport">Hủy</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>

                        <tr>
                            <th>Nước</th>
                            <th>Thành Phố</th>
                            <th>Chức Năng</th>
                            <th>Id</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                        <td style="font-size:14px;">@item.country.countryName</td>

                        <td style="font-size:14px;">@item.cityName</td>
                        <td>
                            <a class="btn btn-sm btn-light text-dark border" href="@Url.Action("Retrash", "Airport", new { id = item.cityId })"> <i class="fas fa-undo"></i></a>
                            <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "Airport", new { id = item.cityId })">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                        <td class="text-cam">@Html.DisplayFor(modelItem => item.cityId)</td>
                        </tr>
                    }
                        </tbody>

                    </table>
            </div>
        </div>
    </div>
</section>